{
	"name": "pydep-pilot",
	"displayName": "PyDepPilot",
	"description": "Manage Python dependencies with a modern UI. View installed packages, check for updates, bulk update, and more.",
	"version": "1.0.3",
	"publisher": "DABWorx",
	"icon": "media/pydeppilot-logo-icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/KrunchMuffin/pydep-pilot"
	},
	"engines": {
		"vscode": "^1.108.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"python",
		"pip",
		"pip manager",
		"uv",
		"package manager",
		"dependency manager",
		"dependencies",
		"pypi"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "pydep-pilot.removePackage",
				"title": "%pydep-pilot.command.removePackage%",
				"description": "Remove Python package"
			},
			{
				"command": "pydep-pilot.packageDescription",
				"title": "%pydep-pilot.command.packageDescription%",
				"description": "Show Python package on PyPI"
			},
			{
				"command": "pydep-pilot.addPackage",
				"title": "%pydep-pilot.command.addPackage%",
				"icon": "$(add)"
			},
			{
				"command": "pydep-pilot.updatePackage",
				"title": "%pydep-pilot.command.updatePackage%",
				"icon": "$(arrow-up)"
			},
			{
				"command": "pydep-pilot.searchPackage",
				"title": "%pydep-pilot.command.searchPackage%",
				"icon": "$(search)"
			},
			{
				"command": "pydep-pilot.refreshPackage",
				"title": "%pydep-pilot.command.refreshPackage%",
				"icon": "$(refresh)"
			},
			{
				"command": "pydep-pilot.copyPackageName",
				"title": "%pydep-pilot.command.copyPackageName%"
			},
			{
				"command": "pydep-pilot.installRequirements",
				"title": "%pydep-pilot.command.installRequirements%"
			},
			{
				"command": "pydep-pilot.pickPackageVersion",
				"title": "%pydep-pilot.command.pickPackageVersion%"
			},
			{
				"command": "pydep-pilot.updateSelected",
				"title": "Update Selected Packages",
				"icon": "$(arrow-up)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "pydep-pilot.addPackage",
					"when": "view == pydep-pilot-installed",
					"group": "navigation@1"
				},
				{
					"command": "pydep-pilot.searchPackage",
					"when": "view == pydep-pilot-installed",
					"group": "navigation@2"
				},
				{
					"command": "pydep-pilot.refreshPackage",
					"when": "view == pydep-pilot-installed",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "pydep-pilot.removePackage",
					"when": "view == pydep-pilot-installed"
				},
				{
					"command": "pydep-pilot.pickPackageVersion",
					"when": "view == pydep-pilot-installed"
				},
				{
					"command": "pydep-pilot.updatePackage",
					"when": "view == pydep-pilot-installed && viewItem == canUpdate"
				},
				{
					"command": "pydep-pilot.updatePackage",
					"when": "view == pydep-pilot-installed && viewItem == canUpdate",
					"group": "inline"
				},
				{
					"command": "pydep-pilot.packageDescription",
					"when": "view == pydep-pilot-installed"
				},
				{
					"command": "pydep-pilot.copyPackageName",
					"when": "view == pydep-pilot-installed"
				}
			],
			"editor/title/context": [
				{
					"command": "pydep-pilot.installRequirements",
					"when": "resourceFilename == requirements.txt"
				}
			],
			"editor/context": [
				{
					"command": "pydep-pilot.installRequirements",
					"when": "resourceFilename == requirements.txt"
				}
			],
			"explorer/context": [
				{
					"command": "pydep-pilot.installRequirements",
					"when": "resourceFilename == requirements.txt"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "pydep-pilot-explorer",
					"title": "%pydep-pilot.view.title%",
					"icon": "media/pydeppilot-logo-sidebar-monotone.svg"
				}
			]
		},
		"views": {
			"pydep-pilot-explorer": [
				{
					"id": "pydep-pilot-installed",
					"name": "%pydep-pilot.view.installed%",
					"type": "webview",
					"icon": "media/pydeppilot-logo-sidebar-monotone.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "pydep-pilot-installed",
				"contents": "%pydep-pilot.view.installed.wait%"
			}
		],
		"configuration": {
			"title": "%pydep-pilot.view.title%",
			"properties": {
				"pydep-pilot.customPypiUrl": {
					"type": "string",
					"default": "",
					"description": "%pydep-pilot.config.customPypiUrl.description%"
				}
			}
		}
	},
	"extensionDependencies": [
		"ms-python.python"
	],
	"scripts": {
		"compile": "npm run check-types && node esbuild.js",
		"check-types": "tsc --noEmit",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"vscode:prepublish": "npm run package",
		"package": "npm run check-types && node esbuild.js --production"
	},
	"devDependencies": {
		"@types/glob": "^9.0.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^25.0.9",
		"@types/vscode": "^1.108.1",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@typescript-eslint/parser": "^8.53.0",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.7.1",
		"esbuild": "^0.27.2",
		"esbuild-plugin-alias": "^0.2.1",
		"eslint": "^9.39.2",
		"glob": "^13.0.0",
		"mocha": "^11.7.5",
		"npm-run-all": "^4.1.5",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@vscode/codicons": "^0.0.44",
		"axios": "^1.13.2",
		"reflect-metadata": "^0.2.2"
	}
}
